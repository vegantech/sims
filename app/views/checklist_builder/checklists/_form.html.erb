<p>
  <%= f.label :active, "Check to make this the active checklist:" %>
  <%= f.check_box :active %>
</p>
<p>
  <%=f.label :text, "Title:" %> <br />
  <%= f.text_area :text , :class => 'spell_check'%>
</p>
<p>
  <%= f.label :directions, "Directions: (Required)" %><br />
  <%= f.text_area :directions, :class => 'spell_check' %>
  </p>

  <div>
    <%= f.label(:document, 'Attach Document') %>
    <%= f.file_field(:document) %>
  </div>
  <%- unless @checklist_definition.new_record? || !@checklist_definition.document? -%>
    <div>
      <%= f.check_box(:delete_document) %>
      <%= f.label(:delete_document, "Delete #{@checklist_definition.document.original_filename}") %>
    </div>
  <%- end -%>



<div id="categories" class ="form_row">
  <% unless categories.blank? %>
    <%= form_tag new_path, :remote => true do %>
      <%= label_tag :category_id, 'Assign Category' %>
      <%= intervention_picker_select(categories) %>
      <%= spinner("categories") %>
      <%= content_tag :noscript, submit_tag("Choose Category") %><br />
      <div id="category_description"><%=description(categories.object) %></div>
    <% end %>
  </div>
  <br class="brclear" /
  <% if custom_intervention? %>
    Custom Goodness
  <% else %>
    <%= render :partial => categories.definitions%>
  <% end %>
<% end %>

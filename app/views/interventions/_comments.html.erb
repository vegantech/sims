<% unless @intervention.new_record? %>
  <div class="fake_label">Comments</div> 
    <%= link_to_function("Show/Hide Comments", nil) do |page|
        page.toggle('intervention_comments_div')
      end
    %>

  <div class="fake_label">&nbsp;</div>
  <%= content_tag :table, render_with_empty(:partial => "interventions/comments/comment", :collection => @intervention.comments.reject(&:new_record?),
    :empty => "<tr><td>There are no comments for this intervention.</td></tr>"), :id => "intervention_comments_div" %>
<% end %>

<%= content_tag_for :tr, intervention_definition do %>
  <td><span class="handle"><%=image_tag 'anchor.png' %></span><br />
    <%=move_up_down_links intervention_definition -%> <br />
    <%= check_box_tag 'id[]',intervention_definition.id, false, :id => "ck_#{intervention_definition.position}" %>
  </td>
  <td align="center">
  <%= link_to 'Show', intervention_builder_intervention_path(@goal_definition,@objective_definition,@intervention_cluster,intervention_definition) %><br />
  <%= link_to 'Edit', edit_intervention_builder_intervention_path(@goal_definition,@objective_definition,@intervention_cluster,intervention_definition) %><br />


  <%= link_to 'Enable', disable_intervention_builder_intervention_path(@goal_definition,@objective_definition,@intervention_cluster,intervention_definition, :enable => true), :confirm => 'Are you sure? ', :method => :put if intervention_definition.disabled %>
<%= link_to 'Disable', disable_intervention_builder_intervention_path(@goal_definition,@objective_definition,@intervention_cluster,intervention_definition), :confirm => 'Are you sure? This is similar to deletion, except any existing interventions will retain their info. ', :method => :put unless intervention_definition.disabled %>  <br />

  <%= link_to 'Delete', intervention_builder_intervention_path(@goal_definition,@objective_definition,@intervention_cluster,intervention_definition), :confirm => 'Are you sure?', :method => :delete %><br />
  <%= link_to 'Recommend Progress Monitors', url_for(:controller=>'intervention_builder/recommended_monitors',:action=>"assign_probes_to_intervention",:id=>intervention_definition) %>
</td>

  <td><%=h intervention_definition.description %></td>
  <td><%=h intervention_definition.tier.title  if intervention_definition.tier%></td>
  <td><%=h pluralize(intervention_definition.time_length_num, intervention_definition.time_length.title) if intervention_definition.time_length %></td>
  <td><%=h intervention_definition.frequency_summary %> </td>
  <td><%=h intervention_definition.updated_at.to_s(:report) %></td>

<% end %>
